<Window x:Class="Gra2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra 2D - Zbieranie Drewna" Height="500" Width="700"
        KeyDown="OknoGlowne_KeyDown">
    <Grid>
        <!-- Definicja rzędów - górny panel i mapa -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Rząd na statystyki i przyciski -->
            <RowDefinition Height="*"/>
            <!-- Rząd na mapę gry -->
        </Grid.RowDefinitions>

        <!-- Panel sterowania z statystykami -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10" Background="#FFE8E8E8">
            <!-- Licznik zebranego drewna -->
            <Label Name="EtykietaDrewna" Content="Drewno: 0" FontSize="16" FontWeight="Bold" Margin="5"/>

            <!-- Wyświetlacz żyć (serc) -->
            <Label Name="EtykietaZycia" Content="Życia: ❤❤❤❤❤" FontSize="16" 
                   FontWeight="Bold" Margin="20,5,5,5" Foreground="Red"/>

            <!-- Przycisk rozpoczynający nową rundę -->
            <Button Content="Nowa runda" Margin="20,0,0,0" Padding="10,5" 
                    Click="NowaRunda_Click" FontWeight="Bold"/>
        </StackPanel>

        <!-- Kontener na mapę gry -->
        <Grid Name="SiatkaMapy" Grid.Row="1" Background="LightGray"/>
    </Grid>
</Window>